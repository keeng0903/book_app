<body>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Edit User</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",id:"inputEmail" ,class:"form-control", placeholder: "Email address",type:"Email"   %>
              </div>
              <div class="form-label-group">
              <%= f.text_field :firstName, autocomplete: "current-password" ,type:"inputEmail" ,id:"inputPassword" ,class:"form-control", placeholder:"Firstname" %>
              </div>
              <div class="form-label-group">
              <%= f.text_field :lastName, autocomplete: "current-password" ,type:"inputEmail" ,id:"inputPassword" ,class:"form-control", placeholder:"Lastname" %>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>
              <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "new-password" ,type:"password" ,id:"inputPassword" ,class:"form-control", placeholder:"New password" %>
              </div>
              <div class="form-label-group">
              <%= f.password_field :current_password, autocomplete: "current-password" ,type:"password" ,id:"inputPassword" ,class:"form-control", placeholder:"Enter current password to changes" %>
              </div>
               <%= f.submit "Update" ,class:"btn btn-lg btn-primary btn-block text-uppercase" ,type:"submit" %>
               <% end %>
              <hr class="my-4">
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"btn btn-primary"%>
              <%= render "users/shared/links"%>
              <%= link_to "Back", :back %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>